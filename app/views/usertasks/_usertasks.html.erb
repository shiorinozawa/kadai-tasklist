<ul class="media-list">
  <% usertasks.each do |usertask| %>
    <% user = usertask.user %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(current_user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= usertask.created_at %></span>
        </div>
        <div>
          <!--<p>status:<%= usertask.status%> task:<%= usertask.content %></p>-->
          <table class="table table-striped">
            <thead>
              <tr>
                <th>id</th>
                <th>ステータス</th>
                <th>タスク</th>
              </tr>
            </thead>
            <tbody>
              <% @usertasks.each do |usertask| %>
              <tr>
                <td><%= link_to usertask.id, usertask %></td>
                <td><%= usertask.status %></td>
                <td><%= usertask.content %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate usertasks %>
</ul>