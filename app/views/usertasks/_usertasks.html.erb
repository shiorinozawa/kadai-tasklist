<h1>タスク一覧</h1>

          <table class="table table-striped">
            <thead>
              <tr>
                <th>id</th>
                <th>ステータス</th>
                <th>タスク</th>
              </tr>
            </thead>
            <tbody>
              <% @usertasks.each do |usertask| %>
              <tr>
                <td><%= link_to usertask.id, usertask %></td>
                <td><%= usertask.status %></td>
                <td><%= usertask.content %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
